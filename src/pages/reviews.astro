---
import PageLayout from '../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const reviews = await getCollection('reviews');

// Sort reviews: featured first, then by date (newest first)
reviews.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
  const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
  return dateB - dateA;
});

function renderStars(rating: number): string {
  return '★'.repeat(rating) + '☆'.repeat(5 - rating);
}
---

<PageLayout
  title="Reviews — 50+ Five-Star Reviews | Gardening Services Dundalk"
  description="Read 50+ five-star reviews from our happy customers in Dundalk and County Louth. See why we're the top-rated gardening service in the area."
>
  <section class="section section-green">
    <div class="container">
      <div class="section-header">
        <span class="section-badge">⭐ Customer Reviews</span>
        <h1>What Our Customers Say</h1>
        <p class="section-subtitle">50+ five-star reviews from happy customers across Dundalk and County Louth.</p>
        <hr class="section-divider" />
      </div>
      <div class="text-center" style="margin-top: 1rem;">
        <div class="google-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="#F59E0B"/></svg>
          5.0 Average Rating · {reviews.length}+ Reviews
        </div>
      </div>
    </div>
  </section>

  <!-- All Customer Reviews -->
  <section class="section section-white">
    <div class="container">
      <h2 class="text-center" style="margin-bottom: 2rem;">Customer Reviews</h2>
      <div class="reviews-grid" id="all-reviews">
        {reviews.map((review, index) => (
          <div class="review-card-fixed fade-in" style={`transition-delay: ${(index % 3) * 0.1}s`}>
            <div class="review-stars" aria-label={`${review.data.rating} out of 5 stars`}>
              {renderStars(review.data.rating)}
            </div>
            <p class="review-title">"{review.data.name}"</p>
            <div class="review-text-wrap">
              <p class="review-text-truncated">{review.data.text.length > 150 ? review.data.text.slice(0, 150) + '...' : review.data.text}</p>
              {review.data.text.length > 150 && (
                <p class="review-text-full" style="display:none;">{review.data.text}</p>
              )}
              {review.data.text.length > 150 && (
                <button class="read-more-btn" type="button">Read more</button>
              )}
            </div>
            <div class="review-card-footer">
              <p class="review-author">— {review.data.author || 'Happy Customer'}</p>
              <p class="review-source">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="var(--gsd-green)" stroke-width="2" style="vertical-align: middle; margin-right: 4px;"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                {review.data.source || 'Customer Review'}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Leave a Review Form -->
  <section class="section section-green" id="leave-review">
    <div class="container">
      <div class="section-header">
        <span class="section-badge">✍️ Share Your Experience</span>
        <h2>Leave Us a Review</h2>
        <p class="section-subtitle">Had work done by Pete & Seamus? We'd love to hear about your experience.</p>
        <hr class="section-divider" />
      </div>
      <div style="max-width: 600px; margin: 2rem auto 0;">
        <form name="customer-review" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thank-you/" class="review-form">
          <input type="hidden" name="form-name" value="customer-review" />
          <p style="display:none"><label>Don't fill: <input name="bot-field" /></label></p>
          <div class="form-group">
            <label for="reviewer-name">Your Name *</label>
            <input type="text" id="reviewer-name" name="reviewer-name" required />
          </div>
          <div class="form-group">
            <label for="reviewer-email">Email Address</label>
            <input type="email" id="reviewer-email" name="reviewer-email" />
          </div>
          <div class="form-group">
            <label for="reviewer-location">Location (e.g. Dundalk, Ardee)</label>
            <input type="text" id="reviewer-location" name="reviewer-location" />
          </div>
          <div class="form-group">
            <label for="review-service">Service We Provided</label>
            <select id="review-service" name="review-service">
              <option value="">Choose a service...</option>
              <option value="garden-landscaping">Garden Landscaping</option>
              <option value="grass-cutting">Grass Cutting & Lawn Care</option>
              <option value="hedge-trimming">Hedge Trimming</option>
              <option value="decking">Decking</option>
              <option value="fencing">Fencing</option>
              <option value="patio-paving">Patio & Paving</option>
              <option value="garden-clearance">Garden Clearance</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="form-group">
            <label>Your Rating *</label>
            <div class="star-rating" id="star-rating">
              {[1, 2, 3, 4, 5].map((star) => (
                <button type="button" class="star-btn" data-rating={star} aria-label={`Rate ${star} stars`}>
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#d1d5db" stroke-width="1.5"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                </button>
              ))}
              <input type="hidden" name="rating" id="rating-value" value="5" required />
            </div>
          </div>
          <div class="form-group">
            <label for="review-title">Review Title *</label>
            <input type="text" id="review-title" name="review-title" placeholder="e.g. Fantastic job on our patio!" required />
          </div>
          <div class="form-group">
            <label for="review-text">Your Review *</label>
            <textarea id="review-text" name="review-text" rows="5" placeholder="Tell us about your experience..." required></textarea>
          </div>
          <button type="submit" class="btn btn-cta btn-lg" style="width: 100%;">Submit Review</button>
        </form>
      </div>
    </div>
  </section>

  <!-- Google Reviews Section -->
  <section class="section section-white">
    <div class="container">
      <div class="section-header">
        <h2>Also on Google</h2>
        <p class="section-subtitle">We're highly rated on Google too. Leave us a review there as well!</p>
      </div>
      <div class="text-center" style="margin-top: 1.5rem;">
        <a href="https://www.google.com/maps/place/Gardening+Services+Dundalk/@53.9062186,-6.399177,17z/data=!4m8!3m7!1s0xea0ceb002b85489:0xcd34c4f91accd5d8!8m2!3d53.9062186!4d-6.399177!16s%2Fg%2F11vr_6tb6f" target="_blank" rel="noopener" class="btn btn-cta btn-lg" style="margin-right: 1rem; margin-bottom: 1rem;">
          <svg width="18" height="18" viewBox="0 0 24 24" style="vertical-align: middle; margin-right: 6px;"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/></svg>
          View Our Google Reviews
        </a>
        <a href="https://search.google.com/local/writereview?placeid=ChIJiVSLAAvOoEgR2NXMGvnENM0" target="_blank" rel="noopener" class="btn btn-white btn-lg" style="margin-bottom: 1rem;">
          Leave Us a Google Review
        </a>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container fade-in">
      <h2>Ready to Transform Your Garden?</h2>
      <p>Join our 500+ happy customers across County Louth.</p>
      <a href="tel:+353851685170" class="cta-phone">085 168 5170</a>
      <div class="cta-buttons">
        <a href="tel:+353851685170" class="btn btn-cta btn-lg">Call Now</a>
        <a href="/contact/" class="btn btn-white btn-lg">Get a Free Quote</a>
      </div>
    </div>
  </section>

  <script>
    // Star rating interaction
    function initStarRating() {
      const container = document.getElementById('star-rating');
      const input = document.getElementById('rating-value') as HTMLInputElement;
      if (!container || !input) return;
      const buttons = container.querySelectorAll('.star-btn');
      let currentRating = 5;

      function updateStars(rating: number) {
        buttons.forEach((btn, i) => {
          const svg = btn.querySelector('svg path') as SVGPathElement;
          if (svg) {
            if (i < rating) {
              svg.setAttribute('fill', '#F59E0B');
              svg.setAttribute('stroke', '#F59E0B');
            } else {
              svg.setAttribute('fill', 'none');
              svg.setAttribute('stroke', '#d1d5db');
            }
          }
        });
      }

      // Default to 5 stars
      updateStars(5);

      buttons.forEach((btn) => {
        btn.addEventListener('click', () => {
          currentRating = parseInt(btn.getAttribute('data-rating') || '5');
          input.value = String(currentRating);
          updateStars(currentRating);
        });
        btn.addEventListener('mouseenter', () => {
          const hoverRating = parseInt(btn.getAttribute('data-rating') || '5');
          updateStars(hoverRating);
        });
      });

      container.addEventListener('mouseleave', () => {
        updateStars(currentRating);
      });
    }

    // Read more toggle
    function initReadMore() {
      document.querySelectorAll('.read-more-btn').forEach((btn) => {
        btn.addEventListener('click', () => {
          const wrap = btn.closest('.review-text-wrap');
          if (!wrap) return;
          const truncated = wrap.querySelector('.review-text-truncated') as HTMLElement;
          const full = wrap.querySelector('.review-text-full') as HTMLElement;
          if (!truncated || !full) return;

          if (full.style.display === 'none') {
            truncated.style.display = 'none';
            full.style.display = 'block';
            btn.textContent = 'Read less';
            // Remove fixed height from card
            const card = btn.closest('.review-card-fixed') as HTMLElement;
            if (card) card.style.height = 'auto';
          } else {
            truncated.style.display = 'block';
            full.style.display = 'none';
            btn.textContent = 'Read more';
            const card = btn.closest('.review-card-fixed') as HTMLElement;
            if (card) card.style.height = '';
          }
        });
      });
    }

    initStarRating();
    initReadMore();
    document.addEventListener('astro:after-swap', () => { initStarRating(); initReadMore(); });
  </script>
</PageLayout>

<style>
  .review-card-fixed {
    background: var(--gsd-white);
    border: 1px solid rgba(58, 125, 68, 0.1);
    border-radius: var(--gsd-radius-lg);
    padding: 1.5rem;
    box-shadow: var(--gsd-shadow-sm);
    height: 280px;
    display: flex;
    flex-direction: column;
    transition: all var(--gsd-transition);
    overflow: hidden;
    position: relative;
  }

  .review-card-fixed:hover {
    box-shadow: var(--gsd-shadow-md);
    border-color: rgba(58, 125, 68, 0.2);
  }

  .review-card-fixed .review-stars {
    color: #F59E0B;
    font-size: 1rem;
    margin-bottom: 0.5rem;
    letter-spacing: 2px;
    flex-shrink: 0;
  }

  .review-card-fixed .review-title {
    font-weight: 700;
    font-size: 1rem;
    color: var(--gsd-green-dark);
    margin-bottom: 0.5rem;
    font-style: italic;
    flex-shrink: 0;
  }

  .review-text-wrap {
    flex: 1;
    min-height: 0;
    overflow: hidden;
  }

  .review-text-truncated,
  .review-text-full {
    color: var(--gsd-text);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .read-more-btn {
    background: none;
    border: none;
    color: var(--gsd-green);
    font-weight: 600;
    font-size: 0.85rem;
    cursor: pointer;
    padding: 0.25rem 0;
    margin-top: 0.25rem;
  }

  .read-more-btn:hover {
    color: var(--gsd-green-dark);
    text-decoration: underline;
  }

  .review-card-footer {
    flex-shrink: 0;
    margin-top: auto;
    padding-top: 0.5rem;
  }

  .review-card-footer .review-author {
    color: var(--gsd-green);
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 0.15rem;
  }

  .review-card-footer .review-source {
    color: var(--gsd-text-light);
    font-size: 0.8rem;
  }

  /* Star rating form */
  .star-rating {
    display: flex;
    gap: 0.25rem;
    align-items: center;
  }

  .star-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.15rem;
    transition: transform 0.15s ease;
  }

  .star-btn:hover {
    transform: scale(1.2);
  }

  .review-form {
    background: var(--gsd-white);
    border-radius: var(--gsd-radius-lg);
    padding: 2rem;
    box-shadow: var(--gsd-shadow-md);
  }

  /* Responsive */
  @media (min-width: 769px) and (max-width: 1024px) {
    .reviews-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
